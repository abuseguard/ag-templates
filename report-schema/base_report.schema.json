{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/abuseguard/ag-templates/main/report-schema/base_report.schema.json",
    "$defs": {
        "Port": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535
        },
        "Ip": {
            "title": "IP information",
            "oneOf": [
              {
                "type": "string",
                "title": "IPv4",
                "format": "ipv4"
              },
              {
                "type": "string",
                "title": "IPv6",
                "format": "ipv6"
              }
            ]
        },
        "Country": {
            "type": "string",
            "title": "Country Code",
            "description": "ISO 3166-1 alpha-2 country code",
            "pattern": "^[A-Z]{2}$"
        },
        
        "Date": {
            "description": "stores either a single date or two dates, one for the first occurrence of the event, one for the most recent",
            "type": "object",
            "required": ["date"],
            "properties": {
              "date": {
                "format": "date-time",
                "type": "string",
                "description": "most recent date-time the event was noticed"
              },
              "fromDate": {
                "format": "date-time",
                "type": "string",
                "description": "date-time the event was first noticed. Can be omitted if it is the same as Date"
              }
            }
        },
        "ReporterInfo": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ReporterType": {
                    "$comment": "Contact info is optional if the reporter is a natural person",
                    "enum": ["Organization", "Individual"],
                    "default": "Individual"
                },
                "ReporterName": {
                    "type": "string"
                },
                "ReporterTitle": {
                    "type": "string"
                },
                "ReporterOrg": {
                    "type": "string"
                },                
                "ReporterEmail": {
                    "type": "string"
                },
                "ReporterPhone": {
                    "type": "string"
                }


            },
            "if": {
                "not": { "properties": { "ReporterType": { "const": "Individual" } } }
            },
            "then": {
                "required": ["ReporterOrg"]
            },
            "required": ["ReporterName","ReporterEmail","ReporterType"]
        }
    },
    "properties": {
        "Base": {
            "type":"object",
            "allOf": [
                {
                    "type":"object",
                    "properties": {
                        "ReporterInfo": {
                            "$ref":"#/$defs/ReporterInfo"
                        },
                        "OnBehalfOf": {
                            "$ref":"#/$defs/ReporterInfo"
                        }
                    }
                }
            ]
        },
        "InternalSchema": {
            "type":"object",
            "properties": {
                "UserInformation": {
                    "properties": {
                        "UserId": {
                            "type": "string",
                            "description": "Internal ID of the reportee."
                        },
                        "UserData": {
                            "type": "object",
                            "description": "Data about a customer normally returned by a resolver in the process of determining the reportee.",
                            "additionalProperties": {
                              "type": "string"
                            }
                        }
                    }
                },
                "AccountInformation": {
                    "properties": {
                        "AccountId": {
                            "type": "string",
                            "description": "Internal ID of the account."
                        },
                        "AccountData": {
                            "type": "object",
                            "description": "Data about a customer account normally returned by a resolver in the process of determining the reportee.",
                            "additionalProperties": {
                              "type": "string"
                            }
                        }
                    }
                },
                "Priority": {
                    "type": "string",
                    "description": "Priority of the report",
                    "enum": ["low", "medium", "high"]
                },
                "ReportedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of the report"
                },
                "EventTags": {
                    "type": "array",
                    "description": "Custom tags for classification, metrics and other internal uses.",
                    "items": {
                      "type": "string"
                    }
                }

            }
        },
        "ReportBase": {
            "type":"object",
            "allOf": [
                {
                    "type":"object",
                    "properties": {
                        "ReportClass": {
                          "type": "string",
                          "description": "class of the reported abuse event",
                          "enum": ["Content", "Activity", "Vulnerability","General"]
                        },
                        "ReportType": {
                          "type": "string",
                          "description": "type of the reported abuse event",
                          "minLength": 1
                        },
                        "ReporterSeverity": {
                          "type": "string",
                          "description": "class of the reported abuse event",
                          "enum": ["low", "medium", "high"]
                        },
                        "ReporterNotes": {
                            "type": "string",
                            "description": "free text - notes by the reporter"
                        },
                        "Disclose": {
                            "type": "boolean",
                            "description": "If true, the reporter allows the recipient to disclose the reporter's identity to the reported party",
                            "default": false
                        }        

                        
                      },
                      "required": ["ReportClass", "ReportType","Disclose"] 
                },
                {
                    "$ref": "#/$defs/Date"
                }
            ]
        
        },
        "IpBasedReport": {
            "allOf": [
                {
                    "$ref": "#/properties/ReportBase"
                },
                {
                    "type":"object",
                    "required": ["sourceIp"],
                    "properties": {
                        "sourceIp": {
                            "$ref":"#/$defs/Ip"
                        },
                        "destinationIp": {
                            "$ref":"#/$defs/Ip"
                        },
                        "destinationPort": {
                            "$ref":"#/$defs/Port"
                        },
                        "ASN": {
                            "type": "string",
                            "description": "ASN of the reported abuse event"
                        }
                    }
                }

                
            ]
        },
        "UrlBasedReport": {
            "allOf": [
                {
                    "$ref": "#/properties/ReportBase"
                },
                {
                    "type":"object",
                    "required": ["sourceUrl"],
                    "properties": {
                        "sourceUrl": {
                            "type": "string",
                            "format": "uri",
                            "description": "URL of the reported abuse event"
                        }
                    }
                }   
            ]
        },
        "IpAndUrlBasedReport": {
            "allOf": [
                {
                    "$ref": "#/properties/ReportBase"
                },
                {
                    "title": "IP and URL Details",
                    "anyOf": [
                        {
                            "type":"object",
                            "required": ["sourceUrl"],
                            "title": "URL Details",
                            "properties": {
                                "sourceUrl": {
                                    "type": "string",
                                    "format": "uri",
                                    "description": "URL of the reported abuse event"
                                }
                            }
                        },
                        {
                            "type":"object",
                            "required": ["sourceIp"],
                            "title": "IP Details",
                            "properties": {
                                "sourceIp": {
                                    "$ref":"#/$defs/Ip"
                                },
                                "destinationIp": {
                                    "$ref":"#/$defs/Ip"
                                },
                                "destinationPort": {
                                    "$ref":"#/$defs/Port"
                                },
                                "ASN": {
                                    "type": "string",
                                    "description": "ASN of the reported abuse event"
                                }
                            }
                        }
                    ]
                }
                
            ]
        },
        "AccountBasedReport": {
            "allOf": [
                {
                    "$ref": "#/properties/ReportBase"
                },
                {
                    "type": "object",
                    "required": ["Account"],
                    "properties": {
                      "Account": {
                        "type": "object",
                        "minProperties": 1,
                        "description": "Account data of the reportee",
                        "properties": {
                          "AccountIdentifier": {
                            "type": "string",
                            "description": "reported account name or other identifier",
                            "not": {
                              "description": "email based user accounts should go to the AccountEmail field",
                              "format": "email"
                            }
                          },
                          "AccountEmail": {
                            "type": "string",
                            "description": "email account of the user"
                          }
                        }
                      }
                    }
                }
                
            ]
        }
    }
}
